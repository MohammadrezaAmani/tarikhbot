# Task Manager Bot - Environment Variables
# Make a copy of this file named '.env' and fill in your values

# Bot API credentials
API_ID=12345678 # Get from my.telegram.org
API_HASH=your_api_hash_here # Get from my.telegram.org
BOT_TOKEN=12345678:your_bot_token_here # Get from @BotFather

# Database settings
# Use sqlite for development, postgres for production
DATABASE_URL=sqlite://db.sqlite3
# For PostgreSQL, use format:
# DATABASE_URL=postgres://username:password@localhost:5432/database_name

# Google API credentials
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
GOOGLE_REDIRECT_URI=https://your-domain.com/google/auth/callback

# Application settings
DEBUG=true # Set to false in production
LOG_LEVEL=INFO # DEBUG, INFO, WARNING, ERROR, CRITICAL
ENVIRONMENT=development # development, production

# Security
SECRET_KEY=change_this_to_a_secure_random_string

# Time settings
SCHEDULER_TIMEZONE=UTC

# Webhook (for production)
WEBHOOK_URL=https://your-domain.com/webhook
WEBHOOK_PORT=8443
PROXY=socks5://127.0.0.1:2334
